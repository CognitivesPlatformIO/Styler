{{ set(this, 'title', 'Reset Password') }}

{{this.registerJs('AuthController.resetPassword()')}}
<div class="login-page page_section">
    <div class="container">
        <div class="tab-content forget_password">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12" id="login-social">
                    <h3 class="sub-heading">Change Your Password</h3>
                    <p class="helper-text">Make sure it's unique to this account and difficult to guess!</p>
                    <div class="WriteAnArticleForm fullWidth">
                        <form id="resetPasswordForm" class="form-horizontal" action="" method="post">
                            <input type="hidden" name="_csrf" value="{{_AppHelper.getCsrfToken()}}" />
                            {% if errors | length > 0 %}
                                <div class="alert alert-danger alert-dismissible fade in" role="alert">
                                    <button class="close" aria-label="Close" data-dismiss="alert" type="button"><span aria-hidden="true">Ã—</span></button>
                                    <ul>
                                        {% for errorArr in errors %}
                                            {% for error in errorArr %}
                                                <li>{{error}}</li>
                                            {% endfor %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            <div class="controls-full">
                                {{_AppForm.input({type:'password',id: 'password', name: 'password', value: '', class: 'c9n-ippt required', placeholder: 'New Password'}) | raw }}
                            </div>
                            <div class="controls-full">
                                {{_AppForm.input({type:'password', name: 'verifypassword', value: '', class: 'c9n-ippt required', placeholder: 'Verify Password'}) | raw }}
                            </div>
                            <div class="pull-right">
                                {{_AppForm.button({type:'submit', name: 'resetPassword', class: 'btn button button grey forget_btn', label:'Reset Password'}) | raw }}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //End Sign Up -->
</div>

